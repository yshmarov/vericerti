<article id="<%= dom_id event %>">
  <%= link_to event do %>
    <strong>ID #</strong>
    <%= event.id %>
  <% end %>

  <p>
    <strong>Template:</strong>
    <%= event.certificate_template %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= event.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <%= event.created_at %>
  </p>

  <%= link_to "Edit", edit_event_path(event) %>
  <%= button_to "Destroy", event, method: :delete %>

</article>
